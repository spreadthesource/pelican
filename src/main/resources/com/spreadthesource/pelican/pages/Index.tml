<html t:type="layout" title="pelican Index"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

	welcome ${loggedUser.name}

<ul>
	<t:loop t:source="listOfItems" t:value="currentItem" t:add="increase,user">
		<t:jquery.dialogajaxlink t:dialog="itemDetails" t:zone="itemZone" t:context="currentItem.id" t:id="ajax">
			<li>
				<span class="expireDate">
					${currentItem.expireDate}
				</span>
				<span class="name">
					${currentItem.Name}
				</span>
				<span class="price">
					${currentItem.Price}
				</span>
			</li>	
		</t:jquery.dialogajaxlink>
	</t:loop>
</ul>

	<t:jquery.dialog t:clientId="itemDetails">
    	<t:zone t:id="itemZone">
	    	<p>Information for : ${item?.name}</p>
		
			<form t:type="form" t:id="form" t:context="item?.id">
				<t:errors />
				<label for="newBid">New Bid</label><input t:type="textfield" t:value="bidValue" t:id="bidValue" />
				<t:submit />
			</form>
		</t:zone>
    </t:jquery.dialog>
	
	
	
</html>
