<html t:type="layout" title="pelican Index"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

	welcome ${loggedUser.name}

	<t:zone t:id="list">
		<ul class="items">
			<t:loop t:source="listOfItems" t:value="currentItem" t:add="increase,user">
				<li>
					<t:actionlink t:zone="itemZone" t:context="currentItem.id" t:id="ajax">
						<img src="${imageOfItem}" alt="${currentItem.Name}" title="${currentItem.Name}"/>
						<p>
							<strong class="name">
								${currentItem.Name}
							</strong>
							<span class="expireDate">
								${currentItem.expireDate}
							</span>
						</p>
						
						<em class="price">
							${maxPrice}
						</em>
						<span style="display:block;clear:both"> </span	>
					</t:actionlink>
					
				</li>	
			</t:loop>
		</ul>
	</t:zone>
	<t:zone t:id="itemZone">
		<t:if t:test="item">
	    	<p>Information for : ${item?.name} -> </p>
			<t:eventlink t:event="add" t:context="[1,item?.id]" t:zone="itemZone">+1</t:eventlink><br/>
			<t:eventlink t:event="add" t:context="[5,item?.id]" t:zone="itemZone">+5</t:eventlink><br/>
			<t:eventlink t:event="add" t:context="[10,item?.id]" t:zone="itemZone">+10</t:eventlink>
		</t:if>
	</t:zone>
	
	
	
</html>
