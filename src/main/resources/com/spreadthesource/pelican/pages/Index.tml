<html t:type="layout" title="pelican Index"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

	welcome ${user.name}

	<t:grid t:source="listOfItems" t:row="currentItem" t:add="increase">
		<p:priceCell>
			${maxPrice}
		</p:priceCell>
		<p:increaseCell>
			<t:actionlink t:id="increase" t:context="currentItem.id">moooooore !</t:actionlink>
		</p:increaseCell>
	</t:grid>
	
</html>
